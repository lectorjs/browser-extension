# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{ts,js,mjs,cjs,tsx,jsx}]
indent_style = space
indent_size = 4
quote_type = single

[*.{yml,yaml,json,jsonc,toml}]
indent_style = space
indent_size = 2
quote_type = double

[*.{html,hbs,svelte,vue}]
indent_style = space
indent_size = 2
quote_type = double

[*.{css,scss}]
indent_style = space
indent_size = 2
